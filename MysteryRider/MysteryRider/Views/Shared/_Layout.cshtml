            crossorigin="anonymous"></script>*@
    <script>
        $(function () {
            Holder.addTheme("thumb", { background: "#55595c", foreground: "#eceeef", text: "Thumbnail" });
        });

        $("#survey-redirect").on("click", function () {
            window.location.replace("index.html");
        });
    </script>
